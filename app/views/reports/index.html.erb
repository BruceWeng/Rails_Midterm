<h1>Report Dashboard</h1>
<ul>
  <% @reports.each do |report| %>
    <li>
      <%= report.category %>
      <%= report.title %>
      <%= report.description %>

      <%= link_to 'Show', :controller => 'reports', :action => 'show', :id => report %>
      <%= link_to 'Edit', :controller => 'reports', :action => 'edit', :id => report %>
      <%= link_to 'Delete', :controller => 'reports', :action => 'destroy', :id => report %>
    </li>
  <% end %>
</ul>